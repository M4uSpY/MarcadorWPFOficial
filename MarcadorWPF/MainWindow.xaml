<Window
    x:Class="MarcadorWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MarcadorWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="#232A33" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Lado IZQUIERDO  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Background="Transparent"
                Orientation="Vertical">
                <StackPanel
                    Margin="0,40,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBox
                        x:Name="txtLog"
                        Width="218"
                        Height="35"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#28A745"
                        FontSize="16"
                        Foreground="White"
                        Text="Esperando huella..." />
                    <Button
                        x:Name="btnLector"
                        Width="218"
                        Height="35"
                        Margin="0,20,0,0"
                        Background="#02528A"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Content="LECTOR INACTIVO"
                        FontSize="20"
                        Foreground="White" />
                </StackPanel>
                <StackPanel
                    Margin="0,40,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="100"
                        Height="auto"
                        Margin="0,0,20,0"
                        Source="/Images/Logo_Cooperativa.png" />
                    <Image
                        Width="100"
                        Height="auto"
                        Source="/Images/iconSoft.png" />
                </StackPanel>
                <StackPanel Margin="10,50,0,0" HorizontalAlignment="Center">
                    <TextBlock
                        x:Name="txtFechaActual"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="fecha" />
                    <TextBlock
                        x:Name="txtHoraActual"
                        Height="66"
                        FontSize="30"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="hora" />
                </StackPanel>
            </StackPanel>

            <!--  Lado derecho  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Center"
                Background="Transparent"
                Orientation="Vertical">
                <StackPanel Margin="10,20,0,0" Orientation="Horizontal">
                    <Border
                        Width="230"
                        Height="230"
                        Margin="0,0,6,0">
                        <Image x:Name="imgFinger" Margin="10" />
                    </Border>
                    <Border
                        Width="230"
                        Height="230"
                        Margin="0,0,6,0">
                        <Image x:Name="imgPersona" Margin="10" />
                    </Border>
                </StackPanel>

                <Border
                    Width="487"
                    Height="160"
                    Margin="0,10,10,0"
                    Padding="14"
                    BorderBrush="#9EA7AE"
                    BorderThickness="1"
                    CornerRadius="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  columnas: izquierda para etiquetas, derecha para valores  -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  FILA 0: Nombre  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#CCCCCC"
                            Text="Nombre completo:" />

                        <TextBlock
                            x:Name="txtNombreCompleto"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Nombre completo"
                            TextTrimming="CharacterEllipsis" />

                        <!--  FILA 1: CI / Fecha  -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="CI:" />
                            <TextBlock Width="8" />
                            <TextBlock
                                x:Name="txtCarnetIdentidad"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="CI" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="Fecha Registrada:" />
                            <TextBlock Width="8" />
                            <TextBlock
                                x:Name="txtFechaRegistrada"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Fecha Registrada" />
                        </StackPanel>

                        <!--  FILA 2: Cargo / Hora  -->
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="Cargo:" />
                            <TextBlock Width="8" />
                            <TextBlock
                                x:Name="txtCargo"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Cargo" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="Hora Registrada:" />
                            <TextBlock Width="8" />
                            <TextBlock
                                x:Name="txtHoraRegistrada"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Hora Registrada" />
                        </StackPanel>

                        <!--  FILA 3: Tipo (ENTRADA / SALIDA)  -->
                        <StackPanel
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="Tipo:" />
                            <TextBlock Width="8" />
                            <!--  Usamos Inlines para colorear solo partes del texto  -->
                            <TextBlock FontSize="16" FontWeight="Bold">
                                <Run Foreground="#0CC769" Text="ENTRADA" />
                                <!--  verde  -->
                                <Run Text=" " />
                                <Run Foreground="#FF4B5C" Text="SALIDA" />
                                <!--  rojo  -->
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>

        </Grid>
    </Border>
</Window>
