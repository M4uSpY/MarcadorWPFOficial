<Window
    x:Class="MarcadorWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MarcadorWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="830"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="#232A33" CornerRadius="10">
        <Grid>


            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="294" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--  Lado IZQUIERDO  -->
            <StackPanel
                Grid.Column="0"
                Background="Transparent"
                Orientation="Vertical">
                <StackPanel
                    Margin="0,40,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <Border
                        Width="218"
                        Padding="6"
                        Background="#28A745"
                        CornerRadius="8">

                        <TextBox
                            x:Name="txtLog"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Top"
                            AcceptsReturn="True"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            IsReadOnly="True"
                            Text="Esperando huella..."
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                    </Border>


                    <Button
                        x:Name="btnLector"
                        Width="218"
                        Height="45"
                        Margin="0,20,0,0"
                        Content="LECTOR INACTIVO"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Padding="5"
                                    Background="#02528A"
                                    CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>

                <StackPanel
                    Margin="0,40,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="100"
                        Height="auto"
                        Margin="10,0,5,0"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Images/Logo_Cooperativa.png" />
                    <Image
                        Width="100"
                        Height="auto"
                        Margin="10,0,0,0"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="/Images/iconSoft.png" />
                </StackPanel>

                <StackPanel Margin="30,50,0,0" HorizontalAlignment="Center">
                    <TextBlock
                        x:Name="txtFechaActual"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="fecha" />
                    <TextBlock
                        x:Name="txtHoraActual"
                        FontSize="25"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="hora" />
                </StackPanel>
            </StackPanel>

            <!--  Lado derecho  -->
            <StackPanel
                Grid.Column="1"
                Width="490"
                HorizontalAlignment="Center"
                Background="Transparent"
                Orientation="Vertical">
                <StackPanel Margin="10,20,0,0" Orientation="Horizontal">
                    <Border
                        Width="230"
                        Height="230"
                        Margin="0,0,6,0"
                        CornerRadius="10">
                        <Image x:Name="imgFinger" Margin="10" />
                    </Border>
                    <Border
                        Width="230"
                        Height="230"
                        Margin="0,0,6,0"
                        CornerRadius="10">
                        <Image x:Name="imgPersona" Margin="10" />
                    </Border>
                </StackPanel>

                <Border
                    Width="487"
                    Height="160"
                    Margin="0,10,0,0"
                    Padding="14"
                    BorderBrush="#9EA7AE"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <!--  AGREGAMOS UNA FILA MÁS  -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  columnas: izquierda para etiquetas, derecha para valores  -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  FILA 0: Nombre  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,5,0,0"
                            VerticalAlignment="Center"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#CCCCCC"
                            Text="Nombre completo:" />

                        <TextBlock
                            x:Name="txtNombreCompleto"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Nombre completo"
                            TextTrimming="CharacterEllipsis" />

                        <!--  FILA 1: CI / Fecha  -->
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="CI:" />
                            <TextBlock Width="8" />
                            <TextBlock
                                x:Name="txtCarnetIdentidad"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="CI" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="Fecha Registrada:" />
                            <TextBlock Width="8" />
                            <TextBlock
                                x:Name="txtFechaRegistrada"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Fecha Registrada" />
                        </StackPanel>

                        <!--  FILA 2: Cargo / Hora  -->
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="Cargo:" />
                            <TextBlock Width="8" />
                            <TextBlock
                                x:Name="txtCargo"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Cargo" />
                        </StackPanel>

                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="10,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="Hora Registrada:" />
                            <TextBlock Width="8" />
                            <TextBlock
                                x:Name="txtHoraRegistrada"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Hora Registrada" />
                        </StackPanel>

                        <!--  FILA 3: Tipo (ENTRADA / SALIDA) dinámico  -->
                        <StackPanel
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="Tipo:" />
                            <TextBlock Width="8" />
                            <TextBlock
                                x:Name="txtTipoMarcacion"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="#0CC769"
                                Text="-" />
                        </StackPanel>

                        <!--  FILA 4: Tiempo trabajado  -->
                        <StackPanel
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="#CCCCCC"
                                Text="Tiempo trabajado:" />
                            <TextBlock Width="8" />
                            <TextBlock
                                x:Name="txtTiempoTrabajado"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="-" />
                        </StackPanel>


                    </Grid>

                </Border>

            </StackPanel>
            <Button
                x:Name="btnSalir"
                Grid.Row="0"
                Grid.Column="1"
                Width="25"
                Height="25"
                Margin="0,8,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="btnSalir_Click"
                Cursor="Hand">

                <!--  Template del botón con borde REDONDEADO  -->
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="2"
                            Background="Red"
                            BorderThickness="0"
                            CornerRadius="8">

                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="✕" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>

    </Border>
</Window>
